{
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": ["off", 4],
      "linebreak-style": ["off", "unix"],
      "quotes": ["off", "single"],
      "semi": "warn",
      "no-console": "off",
      "no-mixed-spaces-and-tabs": "off",
      "no-extra-semi": "off",
      "no-unused-vars": ["error", { "args": "none" }]
    }
  }